<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/new-car.css">
    <title>New car</title>
</head>

<body>
    <div class="row">
        <h1 class="text-center">New Car</h1>
        <div class="col-6 offset-3">
            <form action="/admin/new-car" method="POST" class="validated-form" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-6">
                        <div class="mb-3">
                            <label for="name" class="form-label">Car name</label>
                            <input type="text" class="form-control" id="name" name="car[name]" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Car price</label>
                            <div class="input-group">
                                <span class="input-group-text" id="price-label">$</span>
                                <input type="text" class="form-control" placeholder="0.00" aria-label="price"
                                    name="car[price]" aria-describedby="price-label" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="style" class="form-label">Car style</label>
                            <select class="form-select select-group-label" name="car-style" id="car-style"
                                aria-label="Default select example">
                                <option selected disabled>Chọn</option>
                                <option value="0001">Sedan</option>
                                <option value="0002">Hatchback</option>
                                <option value="0003">SUV</option>
                                <option value="0004">Đa dụng</option>
                                <option value="0005">Bán tải</option>
                                <option value="0006">Thương mại</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="category" class="form-label">Car category</label>
                            <div class="row">
                                <div class="col-6">
                                    <select class="form-select select-group-label" name="car-style" id="car-category"
                                        aria-label="Default select example">
                                        <option selected disabled>Chọn</option>
                                    </select>
                                </div>
                                <div class="col-6">
                                    <button class="btn btn-success custon-btn" id="category">New category</button>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="version" class="form-label">Car version</label>
                            <div class="row">
                                <div class="col-6">
                                    <select class="form-select select-group-label" name="car-style" id="car-version"
                                        aria-label="Default select example">
                                        <option selected disabled>Chọn</option>
                                    </select>
                                </div>
                                <div class="col-6">
                                    <button class="btn btn-success custon-btn">New version</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="mb-3">
                            <label for="origin" class="form-label">Car origin</label>
                            <select class="form-select select-group-label" name="car-style" id="car-origin"
                                aria-label="Default select example">
                                <option selected disabled>Chọn</option>
                                <option value="0001">Xe trong nước</option>
                                <option value="0002">Xe nhập khẩu</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Car numbers seats</label>
                            <div class="row">
                                <div class="col-6">
                                    <select class="form-select select-group-label" name="car-style" id="car-seat"
                                        aria-label="Default select example">
                                        <option selected disabled>Chọn</option>
                                        <option value>Tất cả</option>
                                        <option value="1">5 chỗ</option>
                                        <option value="2">7 chỗ</option>
                                        <option value="3">8 chỗ</option>
                                        <option value="4">9 chỗ</option>
                                        <option value="5">15 chỗ</option>
                                    </select>
                                </div>
                                <div class="col-6">
                                    <button class="btn btn-success custon-btn">New seats</button>
                                </div>
                            </div>
                            
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Car fuel</label>
                            <select class="form-select select-group-label" name="car-style" id="car-fuel"
                                aria-label="Default select example">
                                <option selected disabled>Chọn</option>
                                <option value>Tất cả</option>
                                <option value="0001">Xăng</option>
                                <option value="0002">Dầu</option>
                                <option value="0003">Xăng + Điện</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Car transmission</label>
                            <div class="row">
                                <div class="col-6">
                                    <select class="form-select select-group-label" name="car-style" id="car-transmission"
                                        aria-label="Default select example">
                                        <option selected disabled>Chọn</option>
                                    </select>
                                </div>
                                <div class="col-6">
                                    <button class="btn btn-success custon-btn">New transmission</button>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Car Engine</label>
                            <div class="row">
                                <div class="col-6">
                                    <select class="form-select select-group-label" name="car-style" id="car-engine"
                                        aria-label="Default select example">
                                        <option selected disabled>Chọn</option>
                                    </select>
                                </div>
                                <div class="col-6">
                                    <button class="btn btn-success custon-btn">New Engine</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="images" class="form-label">Car images</label>
                    <div class="input-group">
                        <input type="file" class="form-control" id="images" name="images" aria-describedby="images"
                            aria-label="Upload" multiple>
                        <button class="btn btn-outline-secondary" type="button" id="images">Browse</button>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="feature" class="form-label">Features</label>
                    <select class="form-select" aria-label="Default select example" id="feature">
                        <option value="1" selected>interior</option>
                        <option value="2">exterior</option>
                        <option value="3">safe</option>
                        <option value="4">operate</option>
                    </select>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success" type="submit">Add Car</button>
                </div>
            </form>
        </div>
    </div>

    <div class="login" id="login-box">
        <div id="abc">
            <p>Đăng nhập</p>
            <a class="close" href="#"><i class="fas fa-window-close"></i></a>
        </div>
       <form class="login-content" action="#" method="post"><label class="username">
            <span>Tên hoặc email</span>
            <input id="username" type="text" autocomplete="on" name="username" placeholder="Username" value="" />
            </label>
            <label class="password">
            <span>Mật khẩu</span>
            <input id="password" type="password" name="password" placeholder="Password" value="" />
            </label>
            <a class="forgot" href="#">Quên mật khẩu?</a>
            <button class="button submit-button" type="button" onclick="login(); return false;" id="log">Đăng nhập</button>
             <div class="icon">
                     <p>Hoặc đăng nhập với</p>
                   <button id="fb"><i class="fab fa-facebook-square"></i></button>
                   <button id="gg"><i class="fab fa-google-plus-square"></i></button>
           </div>
        </form>
   </div>

    <script src="https://kit.fontawesome.com/ce35990a57.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <script src="/javascript/jquery-3.6.0.min.js"></script>
    <script src="/javascript/add-car.js"></script>
</body>

</html>